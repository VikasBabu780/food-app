{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "useUnknownInCatchVariables": false,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

